@code {
    RadzenGrid<OrderDetail> ssdGrid;

    private bool loading;

    private List<OrderDetail> ssd = new List<OrderDetail>();

    private FromToDate ftd = new FromToDate();


    protected override async Task OnInitializedAsync()
    {
        loading = true;
        ssd = await _services.getStoreSalesDetails(ftd.FromDate, ftd.ToDate);
        loading = false;
    }

    private async Task SeachForm(EditContext context)
    {
        //ToastService.ShowSuccess("Search successfully!", "Success");
        ssd = await _services.getStoreSalesDetails(ftd.FromDate, ftd.ToDate);
    }
}
