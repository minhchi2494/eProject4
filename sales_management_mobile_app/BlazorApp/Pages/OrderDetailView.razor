<br />

@if (loading)
{
    <table class="table">
        <tr>
            <td colspan="4" class="text-center">
                <span class="spinner-border spinner-border-lg align-center"></span>
            </td>
        </tr>
    </table>
}

<RadzenGrid @ref="ssdGrid" AllowPaging="true" AllowSorting="true" Data="ssd" TItem="OrderDetail" ColumnWidth="200px"
            AllowFiltering="true" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive">
    <Columns>
        <RadzenGridColumn TItem="OrderDetail" Property="ProductId" Title="Product">
            <Template Context="data">
                @data.Product.Name
            </Template>
        </RadzenGridColumn>

        <RadzenGridColumn TItem="OrderDetail" Property="StoreActualQuantity" Title="Store Actual Quantity"></RadzenGridColumn>

        <RadzenGridColumn TItem="OrderDetail" Property="Date" Title="Date">
            <Template Context="data">
                @data.Date.ToString("dd-MM-yyyy")
            </Template>
        </RadzenGridColumn>
    </Columns>
</RadzenGrid>

