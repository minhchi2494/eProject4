@page "/userDetail/{id:int}"
@attribute [Authorize]
@using BlazorApp.Services
@using BlazorApp.Models
@inject IUserServices _services;

<h1>Salesman's Information</h1>

<table class="table">
    <tr>
        <td>Id</td>
        <td>@user.Id</td>
    </tr>

    <tr>
        <td>Name</td>
        <td>@user.Fullname</td>
    </tr>

    <tr>
        <td>Username</td>
        <td>@user.Username</td>
    </tr>

    <tr>
        <td>Target No</td>
        <td>@user.Username</td>
    </tr>

    <tr>
        <td>Email</td>
        <td>@user.Email</td>
    </tr>

    <tr>
        <td>Phone</td>
        <td>@user.Phone</td>
    </tr>

    <tr>
        <td>Address</td>
        <td>@user.Address</td>
    </tr>

    <tr>
        <td>Locaiton Id</td>
        <td>@user.LocationId</td>
    </tr>

    <tr>
        <td>Manager</td>
        <td>@user.ManagerId</td>
    </tr>

    <tr>
        <td>Actual Target</td>
        <td>@user.ActualTarget</td>
    </tr>

    <tr>
        <td>Active</td>
        <td>@user.IsActive</td>
    </tr>
</table>

<a href="/managerUser/@user.ManagerId" class="btn btn-primary">Cancel</a>

@code {
    private User user = new User();

    [Parameter]
    public int id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        user = await _services.getUser(id);
    }
}
